<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Ticket Information"
            android:textSize="24sp"
            android:textColor="@color/primary_text"
            android:gravity="center"
            android:paddingBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket Policy"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/radio_group_ticket_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:textColor="@color/primary_text"
            android:background="@drawable/radio_group_background"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radio_strict_id_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Strict ID Verification"
                android:checked="true"
                android:textColor="@color/primary_text"/>

            <RadioButton
                android:id="@+id/radio_standard_verification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Standard Verification"
                android:textColor="@color/primary_text"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Consent"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"/>

        <Switch
            android:id="@+id/switch_user_consent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Consent"
            android:checked="false"
            android:padding="8dp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Type"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_event_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/event_types"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Security Level"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_security_level"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/security_levels"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ticket Status"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_ticket_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/ticket_statuses"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crowd Density"
            android:textSize="18sp"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="8dp"/>

        <Spinner
            android:id="@+id/spinner_crowd_density"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/crowd_densities"
            android:padding="8dp"
            android:background="@drawable/spinner_background"
            android:textColor="@color/primary_text"
            android:layout_marginBottom="16dp"/>
    </LinearLayout>
</ScrollView>
